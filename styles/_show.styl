.show
  border-bottom 1px solid grey
  background lightgrey
  position relative
  display flex
  @media (max-width: 650px)
    flex 1 0 auto
  &__playcontrols
    display flex
    align-items center
    justify-content center
    width 5rem
    flex-shrink 0
    padding 1rem
    button
      padding 0px
      border 0
      width 30px
      height 30px
      border-radius 60px
      background gradient
      align-items center
      justify-content center
      &:hover
        color red
  &__notes
    padding: 1rem;
    padding-left: 0px;
    width: 100%;
    cursor pointer
  &__row
    display flex
    flex-direction row
    justify-content space-between
  &--dummy
    flex 1 0 auto
  &--playing
    background white
  &__displayNumber
    text-transform uppercase
    margin 0
    color gray3
    font-size 11px
  &__title
    color black
    font-size 1.5rem
    margin 0
  &__date
    margin-top 0
    text-align right
    color gray3
    font-size 1.2rem

.show-wrap
  background white
  display flex
  flex-wrap wrap

.showList
  width 100%
  display flex
  flex-direction column
  @media (max-width: 650px)
    height 300px
    width 100%
    overflow-x auto
    overflow-y scroll

.showNotes
  position sticky
  top 102px
  height calc(100vh - 102px)
  overflow-y scroll
  padding 2rem
  width 62%
  font-size 1.5rem
  @media (max-width: 650px)
    width 100%
  .button
    border-bottom 0
  ul
    padding-left 2rem
    list-style-type circle
  li
    margin 10px 0
  h1,h2,h3,h4,h5,h6
    font-family 'courier'
    font-weight 100
    border-bottom 1px solid grey
    padding-bottom 1rem
    &:before
      padding-right 1rem
  pre
    background lightgrey
    padding 1rem
  h1,h2
    font-size 2.5rem
  a
    color lighten(black, 20%)
    border-bottom 1px solid red
    text-decoration none

